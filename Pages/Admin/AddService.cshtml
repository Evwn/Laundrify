@page
@model Laundrify.Pages.Admin.AddServiceModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Add Service";
}
<h2>Add New Service</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Service.Name"></label>
        <input asp-for="Service.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Service.Price"></label>
        <input asp-for="Service.Price" class="form-control" type="number" min="0.1" step="0.1" required />
    </div>
    <div class="form-group">
        <label asp-for="Service.UnitType"></label>
        <input asp-for="Service.UnitType" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Service</button>
    <a asp-page="/Admin/Services" class="btn btn-secondary">Cancel</a>
</form>
@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
} 